<%- include('../includes/head.ejs') %>

    <body>
        <%- include('../includes/nav.ejs') %>
            <% if( error !== ''){ %>
                <button id="errorView" type="button" class="btn btn-danger  btn-lg btn-block">
                <%=  error %>
            </button>
                <% }%>
                    <div class="container">
                        <div class="row ">
                            <div class="col-sm-4"></div>
                            <div class="col-sm-4 border border-dark mt-4">
                                <form action="/login" method="POST" class="my-3" novalidate>
                                    <div class="form-group">
                                        <label for="email" class="text-success">Gmail</label>
                                        <input type="email" class="form-control" id="gmail" placeholder="Enter Gmail" name="gmail" value="<%= oldInput.gmail %>">
                                        <% if(error === 'Input a valid diu email !'){ %>
                                            <span class="text-danger my-2 mx-1"><%= error %></span>
                                            <% } %>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="text-success">Password</label>
                                        <input type="password" class="form-control" id="password" placeholder="Enter Password" name="password" value="<%= oldInput.password %>">
                                        <% if(error === 'Incorrect Password !') { %>
                                            <span class="text-danger my-2 mx-1"><%= error %></span>
                                            <a class="btn btn-success" href="/reset">Reset Password</a>
                                            <% } %>
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <div class="mt-4">
                                                    <button type="submit" class="btn btn-primary">Login</button>
                                                </div>
                                </form>
                                </div>
                                <div class="col-sm-4"></div>

                            </div>
                        </div>
                        <%- include('../includes/end.ejs') %>