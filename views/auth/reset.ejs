<%- include('../includes/head.ejs') %>

    <body>
        <%- include('../includes/nav.ejs') %>
            <div class="container">
                <div class="row ">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 border border-dark mt-4">
                        <form action="/reset" method="POST" class="my-3">
                            <div class="form-group">
                                <label for="email" class="text-success">Gmail</label>
                                <input type="email" class="form-control" id="gmail" placeholder="Enter Gmail" name="gmail">
                                <% if(invalidEmail.length > 0){ %>
                                    <span class="text-danger my-2 mx-1"><%= invalidEmail %></span>
                                    <% } %>
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="mt-4">
                                    <button type="submit" class="btn btn-primary">Reset Password</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
            <%- include('../includes/end.ejs') %>